.rtl
    direction rtl
.vdp-datepicker
    position relative
    text-align left
    *
        box-sizing border-box
    input
      width 100px
      padding 8px
      border-radius 8px
      border 1px solid rgba(255, 255, 255, 0.20)
      background rgba(255, 255, 255, 0.10)
      font-size 14px
      font-style normal
      font-weight 500
      line-height 16px
      color #FFFFFF80

.vdp-datepicker__calendar
    position absolute
    z-index 100
    border-radius 8px
    background #1B1B1B
    width 251px
    color #fff
    header
        display flex
        padding 12px 12px 0;

        .current-position-header {
          display flex
          align-items: center;
          font-size: 14px;
          font-style: normal;
          font-weight: 800;
          line-height: 16px;
          cursor: pointer;
          border-radius: 6px;
          transition: background .2s;

          &:hover {
            background: rgba(255, 255, 255, 0.1);
          }

          &._year {
            &:hover {
              cursor: default;
              background: transparent;
            }
          }
        }

        .arrow-group
          display flex
          align-items: center;
          margin-left: auto;

          .arrow-container {
            width: 24px;
            height: 24px;
            cursor: pointer;
            border-radius: 6px;
            background: rgba(255, 255, 255, 0.1);

            &:hover {
              background: rgba(255, 255, 255, 0.2);
            }

            &::after {
              display: none;
            }

            &.prev,
            &.next {
              display: flex;
              justify-content: center;
              align-items: center;

              svg {
                width: 16px;
                height: 16px;
              }
            }

            &.next {
              margin-left: 4px
              transform: rotate(180deg);
            }

            &.disabled {
              cursor: not-allowed;
              pointer-events: none;
            }
          }

    .disabled
        color #ddd
        cursor default
    .flex-rtl
        display flex
        width inherit
        flex-wrap wrap

    .cell
        display inline-block
        padding 0 5px
        width (100/7)%
        height 40px
        line-height 40px
        text-align center
        vertical-align middle
        border 1px solid transparent
        &:not(.blank):not(.disabled).day
        &:not(.blank):not(.disabled).month
        &:not(.blank):not(.disabled).year
            cursor pointer
            &:hover
                border 1px solid #4bd
        &.selected
            background #4bd
            &:hover
                background #4bd
            &.highlighted
                background #4bd
        &.highlighted
            background #cae5ed
            &.disabled
                color: #a3a3a3
        &.grey
            color #888

            &:hover
                background inherit


        &.day-header
            font-size 75%
            white-space nowrap
            cursor inherit
            &:hover
                background inherit

    .month,
    .year
        width 33.333%

.vdp-datepicker__clear-button
.vdp-datepicker__calendar-button
    cursor pointer
    font-style normal
    &.disabled
      color #999
      cursor default
